version: "3"

networks:
  loki:

services:
  loki:
    image: {{ loki_image }}
    ports:
      - "{{ loki_host_port }}:3100"
    command: -config.file=/etc/loki/local-config.yaml
    networks:
      - loki

  promtail:
    image: {{ promtail_image }}
    volumes:
      - /var/log:/var/log
    command: -config.file=/etc/promtail/config.yml
    networks:
      - loki
